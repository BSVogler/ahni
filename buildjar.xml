<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?eclipse.ant.import?>
<project default="create_run_jar" name="Create Runnable Jar for Project ahni">
    <!--ANT 1.7 is required                                        -->
    <target depends="build" name="build-jar">
        <jar destfile="ahni.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="ojc.ahni.hyperneat.Run"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
            <fileset dir="properties"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/jakarta-regexp-1.3.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/log4j.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="lib/bain.jar"/>
        </jar>
    </target>
</project>
